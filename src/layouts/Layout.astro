---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  /** Optional image URL for Open Graph / Twitter Card (absolute URL recommended). */
  image?: string;
}

const { title = "MPF Logs", description = "MPF 基金數據與大市指數比較", image } = Astro.props;

const site = Astro.site ?? "https://mpflogs.github.io";
const canonicalUrl = `${site}${Astro.url.pathname || "/mpflogs/"}`;
const imageUrl = image?.startsWith("http") ? image : image ? `${site}/mpflogs${image.startsWith("/") ? "" : "/"}${image}` : undefined;
---
<!doctype html>
<html lang="zh-HK">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="icon" type="image/svg+xml" href="/mpflogs/favicon.svg" />
    <title>{title}</title>
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:locale" content="zh_HK" />
    <meta property="og:site_name" content="MPF Logs" />
    {imageUrl && <meta property="og:image" content={imageUrl} />}
    <!-- Twitter Card -->
    <meta name="twitter:card" content={imageUrl ? "summary_large_image" : "summary"} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {imageUrl && <meta name="twitter:image" content={imageUrl} />}
    <meta name="theme-color" content="#f8fafc" />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-48TP59450X"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-48TP59450X');
    </script>
  </head>
  <body class="min-h-screen bg-slate-50 text-slate-900 antialiased">
    <header class="border-b border-slate-200 bg-white">
      <nav class="mx-auto max-w-6xl px-4 py-4 sm:px-6" aria-label="主導覽">
        <ul class="flex flex-wrap items-center gap-4">
          <li>
            <a href="/mpflogs/" class="text-xl font-semibold text-slate-800 hover:text-slate-600" tabindex="0" aria-label="返回首頁">
              MPF Logs
            </a>
          </li>
          <li>
            <a href="/mpflogs/trustees/" class="rounded px-2 py-1 text-slate-600 hover:bg-slate-100 hover:text-slate-800" tabindex="0" aria-label="受託人與計劃">
              受託人與計劃
            </a>
          </li>
          <li>
            <a href="/mpflogs/funds/" class="rounded px-2 py-1 text-slate-600 hover:bg-slate-100 hover:text-slate-800" tabindex="0" aria-label="全部基金">
              全部基金
            </a>
          </li>
          <li>
            <a href="/mpflogs/favourites/" class="rounded px-2 py-1 text-slate-600 hover:bg-slate-100 hover:text-slate-800" tabindex="0" aria-label="我的收藏">
              我的收藏
            </a>
          </li>
        </ul>
      </nav>
    </header>
    <main class="mx-auto max-w-6xl px-4 py-8 sm:px-6">
      <slot />
    </main>
    <footer class="border-t border-slate-200 bg-white py-6">
      <div class="mx-auto max-w-6xl px-4 text-center text-sm text-slate-500 sm:px-6">
        MPF Logs — 開源於 GitHub
      </div>
    </footer>
  </body>
</html>
